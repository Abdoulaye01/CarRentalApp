

<h1>Vehicles</h1>

<table class="table">
  <thead>
    <tr>
      <th>Regnumber</th>
      <th>VehicletypeImage</th>
      <th>Enginesize</th>
      <th>Fueltype</th>
      <th>Colour</th>
      <th>RentalPrice</th>
      <th>CompanyLocation</th>
      <th>CarBrand</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.regNumber %></td>
        <td><%= image_tag vehicle.vehicleType, size: "200x160" %></td>
        <td><%= vehicle.engineSize %></td>
        <td><%= vehicle.fuelType %></td>
        <td><%= vehicle.colour %></td>
        <td><%= euro vehicle.price %></td>
        <td><%= vehicle.company.address %></td>
        <td><%= vehicle.BrandName %></td>
        <td><%= link_to 'Show', vehicle %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
        <td><%= link_to 'rent', rentals_path %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vehicle', new_vehicle_path %>

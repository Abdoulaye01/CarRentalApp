<p id="notice"><%= notice %></p>

<h1>Vehicles</h1>

<table>
  <thead>
    <tr>
      <th>Regnumber</th>
      <th>VehicletypeImage</th>
      <th>Enginesize</th>
      <th>Fueltype</th>
      <th>Colour</th>
      <th>CompanyAddress</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.regNumber %></td>
        <td><%= image_tag vehicle.vehicleType, height: '100', width: '100' %></td>
        <td><%= vehicle.engineSize %></td>
        <td><%= vehicle.fuelType %></td>
        <td><%= vehicle.colour %></td>
        <td><%= vehicle.company.address %></td>
        <td><%= link_to 'Show', vehicle %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
        <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vehicle', new_vehicle_path %>
<%= will_paginate @vehicles %>

<p id="notice"><%= notice %></p>

<h1>Rentals</h1>

<table>
  <thead>
    <tr>
      <th>Pickupdatetime</th>
      <th>Returndatetime</th>
      <th>Odemeterbefore</th>
      <th>Odemeterafter</th>
      <th>Gastankbefore</th>
      <th>Gastankafter</th>
      <th>CustomerPhone</th>
      <th>Vehicle</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rentals.each do |rental| %>
      <tr>
        <td><%= rental.pickUpDateTime %></td>
        <td><%= rental.returnDateTime %></td>
        <td><%= rental.odemeterBefore %></td>
        <td><%= rental.odemeterAfter %></td>
        <td><%= rental.gasTankBefore %></td>
        <td><%= rental.gasTankAfter %></td>
        <td><%= rental.customer.try(:phoneNumber)%></td>
        <td><%= rental.vehicle.regNumber %></td>
        <td><%= link_to 'Show', rental %></td>
        <td><%= link_to 'Edit', edit_rental_path(rental) %></td>
        <td><%= link_to 'Destroy', rental, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rental', new_rental_path %>
<%= will_paginate @rentals %>
